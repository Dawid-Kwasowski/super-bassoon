{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Simple terminal",
    "version": "1.0.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA/profiles/*"]
      },
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },

    "windows": [
      {
        "decorations": false,
        "label": "main",
        "transparent":true,
        "resizable": true,
        "title": "Shell",
        "width": 800,
        "height": 425
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.terminal.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
